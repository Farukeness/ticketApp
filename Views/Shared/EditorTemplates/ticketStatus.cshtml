@model int 

@{
    var types = Enum.GetValues(typeof(TicketStatus))
                                .Cast<TicketStatus>()
                                .Select(p => new { text = p.ToString(), value = (int)p});
}

@(Html.Kendo().DropDownListFor(m => m)
    .DataTextField("text")
    .DataValueField("value")
    .BindTo(types)
    .HtmlAttributes(new { style = "width:100%" })
)