@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model AdminEditModel
<form asp-action="Edit" method="post">
    <input type="hidden" value="@Model.UserId" name="UserId">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="mb-3" >
        <label class="form-label" asp-for="Email"></label>
        
        <span  asp-for="Email" >@Model.Email</span>
    </div>
    <div class="mb-3" >
        <label class="form-label" asp-for="CurrentRole">Şu anki Rol</label>
        
        <span  asp-for="CurrentRole" >@Model.CurrentRole</span>
        
    </div>

    <div class="form-group" >
        <label  asp-for="SelectedRole">Rol Seçimi</label>
        <select class="form-select" asp-for="SelectedRole" asp-items="@(new SelectList(Model.Roles))">
            <option value="" disabled selected>Rol seçiniz</option>
        </select>
    </div>
    
    <button class="btn btn-primary" type="submit" >Kaydet</button>
</form>