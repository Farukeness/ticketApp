    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div >
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" readonly>
    </div>
    <div >
        <label class="form-label" asp-for="CurrentRole"></label>
        <input class="form-control" asp-for="CurrentRole" readonly>
    </div>

    <div class="form-group" >
        <label  asp-for="SelectedRole"></label>
        <select asp-for="SelectedRole" asp-items="@(new SelectList(Model.Roles))">
            <option value="" disabled selected>Rol se√ßiniz</option>
        </select>
    </div>
    
    <button class="btn btn-primary" type="submit" >Kaydet</button>
