
@{
ViewData["Title"] = "Tickets";
}
@{
    Layout = "~/Views/Shared/_userLayout.cshtml";
}


<section class="jumbotron text-center">
@(Html.Kendo().Grid<ticketApp.Models.Tickets>().Name("TicketsGrid").Columns(columns => {
    columns.Bound(c => c.Id);
    columns.Bound(c => c.Title)
    .HtmlAttributes(new {style = "color:blue;"})
    .ClientTemplate("<a href='" + Url.Action("Detail", "User", new { id = "#=Id#" }) + "'>#=Title#</a>");
    columns.Bound(c => c.Description);
    columns.Bound(c => c.ticketType);
    columns.Bound(c => c.ticketPriority);
    columns.Bound(c => c.ticketStatus);
    columns.Bound(c => c.CreatedAt).Format("{0:dd/MM/yyyy HH:mm}");
    
    
    }).Pageable()
    .Sortable()
    .Filterable()
    .Navigatable()
    .Filterable()
    .Scrollable()
    .DataSource(dataSource => dataSource
    .Ajax()
    .Read(read => read.Action("Tickets_Read","Grid"))
    ))
</section>


